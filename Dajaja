    const scoreDisplay = document.getElementById('score');
    const chicken = document.getElementById('myChicken');
    const wingL = document.getElementById('wingL');
    const wingR = document.getElementById('wingR');
    const bubble = document.getElementById('speech-bubble');
    const sound = document.getElementById('chickenSound');

    scoreDisplay.innerText = count;

    function interact() {
        count++;
        scoreDisplay.innerText = count;
        localStorage.setItem('chickenScore', count);

        // Ø§Ù„ØµÙˆØª
