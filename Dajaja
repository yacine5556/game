    // Ø¯Ø¹Ù… Ø§Ù„Ù†Ù‚Ø± ÙˆØ§Ù„Ù„Ù…Ø³ Ø§Ù„Ù…ØªØ¹Ø¯Ø¯
    chicken.addEventListener('mousedown', (e) => {
        if (e.button === 0) interact(); 
    });

    chicken.addEventListener('touchstart', (e) => {
        e.preventDefault();
        // Ø¯Ø¹Ù… Ø§Ù„Ù†Ù‚Ø± Ø§Ù„Ù…ØªØ¹Ø¯Ø¯ Ø¨Ø§Ù„Ø£ØµØ§Ø¨Ø¹
        for (let i = 0; i < e.changedTouches.length; i++) {
